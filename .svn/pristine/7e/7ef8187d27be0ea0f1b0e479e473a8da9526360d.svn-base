//订单审核通过
verifyOrder=function(){
	
	var order_States=$('#oStatus').html();
	if(orderStatus!=2){
		alert("\""+order_States+"\"状态下无法审核订单");
	}else{
		sendAjax(root+"/apptOrder/verifyOrder.do",{
	                  			oId:$("#oId").val(),
	                  			opInfo:"订单确认提交"},
								function(data){
									if(data.bflag==1){
										alert(data.msg);
										loadOrder();
									}else{
										alert(data.msg);
									}
								}
				);
		
	}

};
//取消订单并退款
cancelOrder=function(){
	var order_States=$('#oStatus').html();
	if(orderStatus==4||orderStatus==5||orderStatus==6||orderStatus==7){
		alert("\""+order_States+"\"状态下无法取消订单");
	}else{
	sendAjax(root+"/apptOrder/getRefundInfo.do",{
                  			oId:$("#oId").val(),
                  			opInfo:"取消订单并退款"},
							function(data){
							if(data.payType==null&&orderStatus==1){
									sendAjax(root+"/apptOrder/cancelOrder.do",{
													oId:orderId,
													cId:docId,
													refund:1,
													oStatus:orderStatus},
													function(data){
														if(data.bflag==1){
															alert(data.msg);
															loadOrder();
														}else{
															alert(data.msg);
														}
													}
												);
								}
								if(data.payType==1){
									sendAjax(root+"/apptOrder/addRefundToBalance.do",{
										mainUserId:data.mainUserId,
										oPayAmount:data.amount,
										oPayType:1,
										oId:orderId,
										cId:docId,
										oStatus:orderStatus},
										function(data){
											if(data.bflag==1){
												alert(data.msg);
												loadOrder();
											}else{
												alert(data.msg);
											}
										}
									);
								}
								if(data.payType==2){
									sendAjax(root+"/pingpp/refundOrder.do",{
										ch_id:data.outOrderNum,
										oPayAmount:data.amount,
										oPayType:2,
										amount:data.amount,
										description:'精准预约取消订单'},
											function(data){
												if(data.bflag==1){
													sendAjax(root+"/apptOrder/cancelOrder.do",{
													oId:orderId,
													cId:docId,
													refund:1,
													oStatus:orderStatus},
													function(data){
														if(data.bflag==1){
															alert(data.msg);
															loadOrder();
														}else{
															alert(data.msg);
														}
													}
												);
											}else{
												alert("退款失败，请重试！");
												}
											
										}
									);
								}
		}
	);
};
