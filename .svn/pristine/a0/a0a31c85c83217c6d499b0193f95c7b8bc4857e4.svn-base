	<select id="queryMainUserCount" parameterType="dto" resultType="java.lang.Integer">
		SELECT
			COUNT(1)
		FROM _rjkx_patient
		WHERE
			_rjkx_patient._parent_id = -1
			AND _rjkx_patient._mobile = #{mobile}
			AND _rjkx_patient._loginname = #{mobile}
	</select>
	
